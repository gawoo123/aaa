<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp"
    android:weightSum="1"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"

        android:layout_marginLeft="16dp"
        android:orientation="vertical">


        <ImageView
            android:id="@+id/coin_img"
            android:layout_width="40dp"
            android:layout_height="40dp"

            app:srcCompat="@mipmap/ic_launcher_round" />

        <TextView
            android:id="@+id/coin_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="TextView" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"

        android:layout_weight="0.5"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical|center_horizontal"
            android:text="$61,249.61" />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/gra"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical|center_horizontal"
        android:layout_weight="0.5"
        android:gravity="center_vertical|center_horizontal"
        android:orientation="vertical">

        <TextView
            android:id="@+id/yesterday_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center_vertical|center_horizontal"
            android:gravity="right|center_horizontal"
            android:text="$61,249.61" />

        <TextView
            android:id="@+id/yesterday_per"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|center_horizontal"
            android:gravity="right|center_horizontal"
            android:text="52.92" />
    </LinearLayout>

    <ImageView
        android:id="@+id/difference_img"
        android:layout_width="20dp"
        android:layout_height="20dp"

        android:layout_gravity="fill_vertical|fill_horizontal"
        app:srcCompat="@android:drawable/ic_input_add" />

    <ImageView
        android:id="@+id/alert_img"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginRight="32dp"
        app:srcCompat="@android:drawable/btn_star_big_off" />
</LinearLayout>